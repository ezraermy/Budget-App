<h2 class="text-2xl font-semibold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full max-w-sm' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :name, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.text_field :name, class: 'form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-400', autofocus: true %>
  </div>

  <div class="mb-4">
    <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.email_field :email, class: 'form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-400', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, class: 'form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-400', autocomplete: "new-password" %>
  </div>

  <div class="mb-6">
    <%= f.label :password_confirmation, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= f.password_field :password_confirmation, class: 'form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-400', autocomplete: "new-password" %>
  </div>

  <div class="mb-6">
    <%= f.submit "Sign up", class: 'bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
